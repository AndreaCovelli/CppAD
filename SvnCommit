# Add BenderQuad to library
#
# SvnCommit: file that preformed this commit.
# WhatsNew06.omh: user's view of the changes.
#
# BenderQuad.h: routine for computing Hessian of Bender's reduced objective.
# CppAD_vector.h: add specifications for resize(0) case.
# CppAD.h: include BenderQuad.h.
# LuDetAndSolve.omh: move LuRatio.h to different section of library.
# library.omh: group BenderQuad and LuRatio togeather.
# ExampleList.omh: add BenderQuad example to list. 
# BenderQuad.cpp: example and test for BenderQuad.
# Example.vcproj: add BenderQuad to list. 
# Example.cpp: add BenderQuad to list. 
# Example/Makefile.am: add BenderQuad to list. 
# Makefile.am: add BenderQuad.h to list.
add_list="
	CppAD/local/BenderQuad.h
	Example/BenderQuad.cpp
"
change_list="
	SvnCommit
	CppAD/CppAD_vector.h
	CppAD/CppAD.h
	omh/LuDetAndSolve.omh
	omh/library.omh
	omh/WhatsNew06.omh
	omh/WishList.omh
	omh/ExampleList.omh
	Example/Example.vcproj
	Example/Example.cpp
	Example/Makefile.am
	Makefile.am
"
delete_list="
"
#----------------------------------------------------------------------
# Edit section above for individual cases, section below stays the same
# Do not use add_list to add directories; use the following instead:
#	svn add --non-recursive dir
#	svn commit directory -m "adding directory dir" dir
# where dir is replaced by the name of the directory. 
# Then use add_list to add the files within that directory.
#----------------------------------------------------------------------
sed -e "/^[^#]/d" -e "s/^[#] *//" < SvnCommit > svn.log
count=0
for file in $add_list $change_list
do
	count=`expr $count + 1`
	ext=`echo $file | sed -e "s/.*\././"`
	if \
	[ $file != "CheckIncludeFile"  ] && \
	[ $file != "CheckIncludeOmh"   ] && \
	[ $file != "SvnCommit"         ] && \
	[ $file != "SvnCommit.sed"     ] && \
	[ $ext  != ".vcproj"           ] && \
	[ $ext  != ".sln"              ] && \
	[ $ext  != ".vim"              ]
	then
		# automatic edits and backups
		echo "cp $file junk.$count"
		cp $file junk.$count
		sed -f SvnCommit.sed < junk.$count > $file
		diff junk.$count $file
	fi
done
for file in $add_list
do
	echo "svn add $file ?"
done
for file in $delete_list
do
	echo "svn delete $file ?"
done
response=""
while [ "$response" != "c" ] && [ "$response" != "a" ]
do
	read -p "continue [c] or abort [a] ? " response
done
if [ "$response" = "c" ]
then
	for file in $add_list
	do
		svn add $file
	done
	for file in $delete_list
	do
		svn delete $file
	done
	svn commit --file svn.log $add_list $change_list $delete_list
else
	count=0
	for file in $add_list $change_list
	do
		count=`expr $count + 1`
		ext=`echo $file | sed -e "s/.*\././"`
		if \
		[ $file != "CheckIncludeFile"  ] && \
	   	[ $file != "CheckIncludeOmh"   ] && \
	   	[ $file != "SvnCommit"         ] && \
	   	[ $file != "SvnCommit.sed"     ] && \
	   	[ $ext  != ".vcproj"           ] && \
		[ $ext  != ".sln"              ] && \
	   	[ $ext  != ".vim"              ]
		then
			# undo the automatic edits
			echo "mv junk.$count $file"
			mv junk.$count $file
		fi
	done
fi
