# Improve AD cos, cosh, and exp examples.
#
# SvnCommit: file that preformed this commit.
# WhatsNew06.omh: user's view of change.
# Tan.cpp: use CppAD::tan in place of tan.
# Cos.cpp: move Example/Cos.cpp to TestMore/Cos.cpp, create new Example/Cos.cpp
# Cosh.cpp: move Example/Cos.cpp to TestMore/Cos.cpp, create new Example/Cos.cpp
# Exp.cpp: make Example/Exp.cpp part of TestMore/Exp.cpp, new Example/Cos.cpp
# TestMore.cpp: add Cos.cpp and Cosh.cpp to list.
# TestMore.vcproj: add Cos.cpp and Cosh.cpp to list.
#
# -----------------------------------------------
sed -e "/^[^#]/d" -e "s/^[#] *//" < SvnCommit > svn.log
add_list="
	TestMore/Cos.cpp
	TestMore/Cosh.cpp
"
change_list="
	SvnCommit
	omh/WhatsNew06.omh
	Example/Tan.cpp
	Example/Cos.cpp
	Example/Cosh.cpp
	Example/Exp.cpp
	TestMore/Exp.cpp
	TestMore/TestMore.cpp
	TestMore/TestMore.vcproj
	TestMore/Makefile.am
"
delete_list="
"
count=0
for file in $add_list $change_list
do
	count=`expr $count + 1`
	ext=`echo $file | sed -e "s/.*\././"`
	if [ $file != "SvnCommit"      ] && \
	   [ $file != "SvnCommit.sed"  ] && \
	   [ $ext != ".vcproj"         ] && \
	   [ $ext != ".vim"            ]
	then
		# automatic edits and backups
		echo "cp $file junk.$count"
		cp $file junk.$count
		sed -f SvnCommit.sed < junk.$count > $file
		diff junk.$count $file
	fi
done
for file in $add_list
do
	echo "svn add $file ?"
done
for file in $delete_list
do
	echo "svn delete $file ?"
done
response=""
while [ "$response" != "c" ] && [ "$response" != "a" ]
do
	read -p "continue [c] or abort [a] ? " response
done
if [ "$response" = "c" ]
then
	for file in $add_list
	do
		svn add $file
	done
	for file in $delete_list
	do
		svn delete $file
	done
	svn commit --file svn.log $add_list $change_list $delete_list
else
	count=0
	for file in $add_list $change_list
	do
		count=`expr $count + 1`
		ext=`echo $file | sed -e "s/.*\././"`
		if [ $file != "SvnCommit"      ] && \
	   	[ $file != "SvnCommit.sed"  ] && \
	   	[ $ext != ".vcproj"         ] && \
	   	[ $ext != ".vim"            ]
		then
			# undo the automatic edits
			echo "mv junk.$count $file"
			mv junk.$count $file
		fi
	done
fi
