# Separate first order Reverse mode and generally improve Reverse documentaion.
#
# SvnCommit: file that made this commit.
# Reverse.h: move documenation to Reverse.omh.
# Reverse.omh: move and improve Reverse documentation here.
# Forward.omh: minor improvements.
# WhatsNew05.omh: remove cross reference to Forward.cpp.
# WhatsNew06.omh: users view of changes.
# ExampleList.omh: remove Reverse.cpp and add ReverseOne.cpp, ReverseAny.cpp.
# Forward.cpp: change Test to ForwardCases.
# Example.vcproj: remove Reverse.cpp and add ReverseOne.cpp, ReverseAny.cpp.
# Example.cpp: remove Reverse.cpp and add ReverseOne.cpp, ReverseAny.cpp.
# HesTimesDir.cpp: change notation to better match documentaiton.
# Makefile.am: remove Reverse.cpp and add ReverseOne.cpp, ReverseAny.cpp.
add_list="
	omh/Reverse.omh
	Example/ReverseOne.cpp
	Example/ReverseAny.cpp
"
change_list="
	SvnCommit
	CppAD/local/Reverse.h
	omh/Forward.omh
	omh/WhatsNew05.omh
	omh/WhatsNew06.omh
	omh/ExampleList.omh
	Example/Forward.cpp
	Example/Example.vcproj
	Example/Example.cpp
	Example/HesTimesDir.cpp
	Example/Makefile.am
"
delete_list="
	Example/Reverse.cpp
"
#----------------------------------------------------------------------
# Edit section above for individual cases, section below stays the same
#----------------------------------------------------------------------
sed -e "/^[^#]/d" -e "s/^[#] *//" < SvnCommit > svn.log
count=0
for file in $add_list $change_list
do
	count=`expr $count + 1`
	ext=`echo $file | sed -e "s/.*\././"`
	if \
	[ $file != "CheckIncludeFile"  ] && \
	[ $file != "CheckIncludeOmh"   ] && \
	[ $file != "SvnCommit"         ] && \
	[ $file != "SvnCommit.sed"     ] && \
	[ $ext  != ".vcproj"           ] && \
	[ $ext  != ".vim"              ]
	then
		# automatic edits and backups
		echo "cp $file junk.$count"
		cp $file junk.$count
		sed -f SvnCommit.sed < junk.$count > $file
		diff junk.$count $file
	fi
done
for file in $add_list
do
	echo "svn add $file ?"
done
for file in $delete_list
do
	echo "svn delete $file ?"
done
response=""
while [ "$response" != "c" ] && [ "$response" != "a" ]
do
	read -p "continue [c] or abort [a] ? " response
done
if [ "$response" = "c" ]
then
	for file in $add_list
	do
		svn add $file
	done
	for file in $delete_list
	do
		svn delete $file
	done
	svn commit --file svn.log $add_list $change_list $delete_list
else
	count=0
	for file in $add_list $change_list
	do
		count=`expr $count + 1`
		ext=`echo $file | sed -e "s/.*\././"`
		if \
		[ $file != "CheckIncludeFile"  ] && \
	   	[ $file != "CheckIncludeOmh"   ] && \
	   	[ $file != "SvnCommit"         ] && \
	   	[ $file != "SvnCommit.sed"     ] && \
	   	[ $ext  != ".vcproj"           ] && \
	   	[ $ext  != ".vim"              ]
		then
			# undo the automatic edits
			echo "mv junk.$count $file"
			mv junk.$count $file
		fi
	done
fi
