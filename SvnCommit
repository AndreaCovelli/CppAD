# Group ADFun member functions that return AD operation sequence properties.
#
# SvnCommit: file that made this commit.
# RevSparseHes.h: fix cross reference links.
# Reverse.h: fix cross reference links.
# Fun.h: remove Domain, Range, Parameter, and Size from this section.
# FunConstuct.h: use F for function corresponding to ADFun object f.
# Forward.h: fix cross reference links.
# ForSparseJac.h: fix cross reference links.
# RevSparseJac.h: fix cross reference links.
# Faq.omh: fix cross reference links.
# WhatsNew04.omh: fix cross reference links.
# WhatsNew06.omh: users view of the changes.
# Example.vcproj: add SeqProperty.cpp to list of examples.
# Example.cpp: add SeqProperty.cpp to list of examples.
# Makefile.am: add SeqProperty.cpp to list of examples.
add_list="
	omh/SeqProperty.omh
	Example/SeqProperty.cpp
"
change_list="
	SvnCommit
	CppAD/local/RevSparseHes.h
	CppAD/local/Reverse.h
	CppAD/local/Fun.h
	CppAD/local/FunConstruct.h
	CppAD/local/Forward.h
	CppAD/local/ForSparseJac.h
	CppAD/local/RevSparseJac.h
	omh/Faq.omh
	omh/WhatsNew04.omh
	omh/WhatsNew06.omh
	Example/Example.vcproj
	Example/Example.cpp
	Example/Makefile.am
"
delete_list="
"
#----------------------------------------------------------------------
# Edit section above for individual cases, section below stays the same
#----------------------------------------------------------------------
sed -e "/^[^#]/d" -e "s/^[#] *//" < SvnCommit > svn.log
count=0
for file in $add_list $change_list
do
	count=`expr $count + 1`
	ext=`echo $file | sed -e "s/.*\././"`
	if \
	[ $file != "CheckIncludeFile"  ] && \
	[ $file != "CheckIncludeOmh"   ] && \
	[ $file != "SvnCommit"         ] && \
	[ $file != "SvnCommit.sed"     ] && \
	[ $ext  != ".vcproj"           ] && \
	[ $ext  != ".vim"              ]
	then
		# automatic edits and backups
		echo "cp $file junk.$count"
		cp $file junk.$count
		sed -f SvnCommit.sed < junk.$count > $file
		diff junk.$count $file
	fi
done
for file in $add_list
do
	echo "svn add $file ?"
done
for file in $delete_list
do
	echo "svn delete $file ?"
done
response=""
while [ "$response" != "c" ] && [ "$response" != "a" ]
do
	read -p "continue [c] or abort [a] ? " response
done
if [ "$response" = "c" ]
then
	for file in $add_list
	do
		svn add $file
	done
	for file in $delete_list
	do
		svn delete $file
	done
	svn commit --file svn.log $add_list $change_list $delete_list
else
	count=0
	for file in $add_list $change_list
	do
		count=`expr $count + 1`
		ext=`echo $file | sed -e "s/.*\././"`
		if \
		[ $file != "CheckIncludeFile"  ] && \
	   	[ $file != "CheckIncludeOmh"   ] && \
	   	[ $file != "SvnCommit"         ] && \
	   	[ $file != "SvnCommit.sed"     ] && \
	   	[ $ext  != ".vcproj"           ] && \
	   	[ $ext  != ".vim"              ]
		then
			# undo the automatic edits
			echo "mv junk.$count $file"
			mv junk.$count $file
		fi
	done
fi
