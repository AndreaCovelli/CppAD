# Improve documentation and example for ForOne.
#
# SvnCommit: file that made this commit.
# Dev.omh: move Developer.omh here.
# RevSparseHes.h: fix cross reference to current section.
# Jacobian.h: fix cross reference to current section (and other minor edits).
# ForOne.h: major changes to doc and make code agree with new notation.
# RevSparseJac.h: fix cross reference to current section.
# Build: Change Developer directory to Dev directory.
# SvnStatus: Change Developer directory to Dev directory.
# InstallUnix.omh: Change Developer directory to Dev directory.
# WhatsNew06.omh: user's view of the changes.
# InstallWindows.omh: Change Developer directory to Dev directory.
# CleanCppAD: Change Developer directory to Dev directory.
# Jacobian.cpp: minor edit.
# ForOne.cpp: make like other examples and ForOne documentation.
# Developer.omh: move from here to Dev.omh.
# RunOmhelp: use new features of OMhelp to better report warning, errors.
# Makefile: Change Developer directory to Dev directory.
add_list="
	Dev.omh
"
change_list="
	SvnCommit
	CppAD/local/RevSparseHes.h
	CppAD/local/Jacobian.h
	CppAD/local/ForOne.h
	CppAD/local/RevSparseJac.h
	Build
	SvnStatus
	omh/InstallUnix.omh
	omh/WhatsNew06.omh
	omh/InstallWindows.omh
	CleanCppAD
	Example/Jacobian.cpp
	Example/ForOne.cpp
	RunOMhelp
	Makefile.am
"
delete_list="
	Developer.omh
"
#----------------------------------------------------------------------
# Edit section above for individual cases, section below stays the same
#----------------------------------------------------------------------
sed -e "/^[^#]/d" -e "s/^[#] *//" < SvnCommit > svn.log
count=0
for file in $add_list $change_list
do
	count=`expr $count + 1`
	ext=`echo $file | sed -e "s/.*\././"`
	if \
	[ $file != "CheckIncludeFile"  ] && \
	[ $file != "CheckIncludeOmh"   ] && \
	[ $file != "SvnCommit"         ] && \
	[ $file != "SvnCommit.sed"     ] && \
	[ $ext  != ".vcproj"           ] && \
	[ $ext  != ".vim"              ]
	then
		# automatic edits and backups
		echo "cp $file junk.$count"
		cp $file junk.$count
		sed -f SvnCommit.sed < junk.$count > $file
		diff junk.$count $file
	fi
done
for file in $add_list
do
	echo "svn add $file ?"
done
for file in $delete_list
do
	echo "svn delete $file ?"
done
response=""
while [ "$response" != "c" ] && [ "$response" != "a" ]
do
	read -p "continue [c] or abort [a] ? " response
done
if [ "$response" = "c" ]
then
	for file in $add_list
	do
		svn add $file
	done
	for file in $delete_list
	do
		svn delete $file
	done
	svn commit --file svn.log $add_list $change_list $delete_list
else
	count=0
	for file in $add_list $change_list
	do
		count=`expr $count + 1`
		ext=`echo $file | sed -e "s/.*\././"`
		if \
		[ $file != "CheckIncludeFile"  ] && \
	   	[ $file != "CheckIncludeOmh"   ] && \
	   	[ $file != "SvnCommit"         ] && \
	   	[ $file != "SvnCommit.sed"     ] && \
	   	[ $ext  != ".vcproj"           ] && \
	   	[ $ext  != ".vim"              ]
		then
			# undo the automatic edits
			echo "mv junk.$count $file"
			mv junk.$count $file
		fi
	done
fi
