# Improve examples for AD standard math unary functions.
#
# SvnCommit: file that preformed this commit.
#
# StdMathUnary.h: added the tan(x) function.
# WhatsNew06.omh: users view of changes.
# ExampleList.omh: add Tan.cpp example.
# Asin.cpp: move Example/Asin.cpp to TestMore/Asin.cpp and create new Asin.cpp.
# Example.vcproj: add Tan.cpp example.
# Example.cpp: add Tan.cpp example.
# Atan.cpp: move Example/Atan.cpp into TestMore/Atan.cpp and create Asin.cpp.
# Acos.cpp: move Example/Acos.cpp to TestMore/Acos.cpp and create new Acos.cpp.
# Example/Makefile.am: add Tan.cpp example.
# TestMore.cpp: add new tests (moved here from example directory).
# TestMore.vcproj: add new tests (moved here from example directory).
# TestMore/Makefile.am: add new tests (moved here from example directory).
#
# Example files:
# Cos.h, Cosh.h, Exp.h, Log.h, Log10.h, Sin.h, 
# Sinh.h, Sqrt.h
#
# -----------------------------------------------
sed -e "/^[^#]/d" -e "s/^[#] *//" < SvnCommit > svn.log
add_list="
	Example/Tan.cpp
	TestMore/Acos.cpp
	TestMore/Asin.cpp
"
change_list="
	SvnCommit
	CppAD/local/StdMathUnary.h
	omh/WhatsNew06.omh
	omh/ExampleList.omh
	Example/Asin.cpp
	Example/Example.vcproj
	Example/Example.cpp
	Example/Atan.cpp
	Example/Acos.cpp
	Example/Makefile.am
	TestMore/TestMore.cpp
	TestMore/Atan.cpp
	TestMore/TestMore.vcproj
	TestMore/Makefile.am
"
delete_list="
"
count=0
for file in $add_list $change_list
do
	count=`expr $count + 1`
	ext=`echo $file | sed -e "s/.*\././"`
	if [ $file != "SvnCommit"      ] && \
	   [ $file != "SvnCommit.sed"  ] && \
	   [ $ext != ".vcproj"         ] && \
	   [ $ext != ".vim"            ]
	then
		# automatic edits and backups
		echo "cp $file junk.$count"
		cp $file junk.$count
		sed -f SvnCommit.sed < junk.$count > $file
		diff junk.$count $file
	fi
done
for file in $add_list
do
	echo "svn add $file ?"
done
for file in $delete_list
do
	echo "svn delete $file ?"
done
response=""
while [ "$response" != "c" ] && [ "$response" != "a" ]
do
	read -p "continue [c] or abort [a] ? " response
done
if [ "$response" = "c" ]
then
	for file in $add_list
	do
		svn add $file
	done
	for file in $delete_list
	do
		svn delete $file
	done
	svn commit --file svn.log $add_list $change_list $delete_list
else
	count=0
	for file in $add_list $change_list
	do
		count=`expr $count + 1`
		ext=`echo $file | sed -e "s/.*\././"`
		if [ $file != "SvnCommit"      ] && \
	   	[ $file != "SvnCommit.sed"  ] && \
	   	[ $ext != ".vcproj"         ] && \
	   	[ $ext != ".vim"            ]
		then
			# undo the automatic edits
			echo "mv junk.$count $file"
			mv junk.$count $file
		fi
	done
fi
