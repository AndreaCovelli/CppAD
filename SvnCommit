# Improve Poly documentation.
#
# SvnCommit: file that made this commit.
# SpeedTest.h: change Description heading to Purpose.
# CheckNumericType.h: change Description heading to Purpose.
# CheckSimpleVector.h: change Description heading to Purpose.
# NearEqual.h: change Description heading to Purpose.
# PowInt.h: add operation sequence independence to description.
# Poly.h: improve documentation.
# glossary: add definition of Type operation seqeunce and sub definitions.
# library.omh: remove Poly.h source code from documentation.
# WhatsNew06.omh: user's view of the changes.
# TheoryExamList.omh: remove reference to Poly.h source code.
# Polynomial.omh: no longer needed to contain Poly.h source code.
add_list="
"
change_list="
	SvnCommit
	CppAD/SpeedTest.h
	CppAD/CheckNumericType.h
	CppAD/CheckSimpleVector.h
	CppAD/NearEqual.h
	CppAD/PowInt.h
	CppAD/Poly.h
	omh/glossary.omh
	omh/library.omh
	omh/WhatsNew06.omh
	omh/TheoryExamList.omh
"
delete_list="
	omh/Polynomial.omh
"
#----------------------------------------------------------------------
# Edit section above for individual cases, section below stays the same
#----------------------------------------------------------------------
sed -e "/^[^#]/d" -e "s/^[#] *//" < SvnCommit > svn.log
count=0
for file in $add_list $change_list
do
	count=`expr $count + 1`
	ext=`echo $file | sed -e "s/.*\././"`
	if \
	[ $file != "CheckIncludeFile"  ] && \
	[ $file != "CheckIncludeOmh"   ] && \
	[ $file != "SvnCommit"         ] && \
	[ $file != "SvnCommit.sed"     ] && \
	[ $ext  != ".vcproj"           ] && \
	[ $ext  != ".vim"              ]
	then
		# automatic edits and backups
		echo "cp $file junk.$count"
		cp $file junk.$count
		sed -f SvnCommit.sed < junk.$count > $file
		diff junk.$count $file
	fi
done
for file in $add_list
do
	echo "svn add $file ?"
done
for file in $delete_list
do
	echo "svn delete $file ?"
done
response=""
while [ "$response" != "c" ] && [ "$response" != "a" ]
do
	read -p "continue [c] or abort [a] ? " response
done
if [ "$response" = "c" ]
then
	for file in $add_list
	do
		svn add $file
	done
	for file in $delete_list
	do
		svn delete $file
	done
	svn commit --file svn.log $add_list $change_list $delete_list
else
	count=0
	for file in $add_list $change_list
	do
		count=`expr $count + 1`
		ext=`echo $file | sed -e "s/.*\././"`
		if \
		[ $file != "CheckIncludeFile"  ] && \
	   	[ $file != "CheckIncludeOmh"   ] && \
	   	[ $file != "SvnCommit"         ] && \
	   	[ $file != "SvnCommit.sed"     ] && \
	   	[ $ext  != ".vcproj"           ] && \
	   	[ $ext  != ".vim"              ]
		then
			# undo the automatic edits
			echo "mv junk.$count $file"
			mv junk.$count $file
		fi
	done
fi
