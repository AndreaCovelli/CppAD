# Convert Introduction programs to subroutines that verify values.
#
# SvnCommit: file that preformed this commit plus changes from intro branch.
# Introduction.vcproj: Visual studio project file.
# ExpApx.cpp: example and test of ExpApx.
# Introduciton.cpp: driver routine for all he tests in Introduction.
# Introduction.sln: Visual studio project file.
# ExpApxSeq.cpp: change into an automated test.
# ExpApxRev.cpp: change into an automated test.
# ExpApxSeqMain.cpp: old test driver (replaced by Introduction.cpp)
# Makefile.am: combine all cases into one program.
# ExpApxAD.cpp: change into an automated test.
# ExpApxMain.cpp: old test driver (replaced by Introduction.cpp)
# ExpApxFor.cpp: change into an automated test.
# ExpApx.omh: link to automated test instead of test and driver.
# ExpApxFor.omh: link to automated test instead of test and driver.
# ExpApxSeq.omh: link to automated test instead of test and driver.
# Introduction.omh: add Introduction.cpp to list.
# ExpApxRev.omh: link to automated test instead of test and driver.
# WhatsNew.omh: user's view of the changes.
# Example.cpp: remove dead code (no longer used).
# TestMore.cpp: improve check for memory leak.
add_list="
	Introduction/ExpApx.cpp
	Introduction/Introduction.cpp
"
change_list="
	SvnCommit
	Introduction/ExpApxSeq.cpp
	Introduction/ExpApxRev.cpp
	Introduction/Makefile.am
	Introduction/ExpApxAD.cpp
	Introduction/ExpApxFor.cpp
	omh/ExpApx.omh
	omh/ExpApxFor.omh
	omh/ExpApxSeq.omh
	omh/Introduction.omh
	omh/ExpApxRev.omh
	omh/WhatsNew06.omh
	Example/Example.cpp
	TestMore/TestMore.cpp
"
delete_list="
	Introduction/ExpApxSeqMain.cpp
	Introduction/ExpApxMain.cpp
"
#----------------------------------------------------------------------
# Edit section above for individual cases, section below stays the same
# Do not use add_list to add directories; use the following instead:
#	svn add --non-recursive dir
#	svn commit directory -m "adding directory dir" dir
# where dir is replaced by the name of the directory. 
# Then use add_list to add the files within that directory.
#----------------------------------------------------------------------
sed -e "/^[^#]/d" -e "s/^[#] *//" < SvnCommit > svn.log
count=0
for file in $add_list $change_list
do
	count=`expr $count + 1`
	ext=`echo $file | sed -e "s/.*\././"`
	if \
	[ $file != "CheckIncludeFile"  ] && \
	[ $file != "CheckIncludeOmh"   ] && \
	[ $file != "SvnCommit"         ] && \
	[ $file != "SvnCommit.sed"     ] && \
	[ $ext  != ".vcproj"           ] && \
	[ $ext  != ".vim"              ]
	then
		# automatic edits and backups
		echo "cp $file junk.$count"
		cp $file junk.$count
		sed -f SvnCommit.sed < junk.$count > $file
		diff junk.$count $file
	fi
done
for file in $add_list
do
	echo "svn add $file ?"
done
for file in $delete_list
do
	echo "svn delete $file ?"
done
response=""
while [ "$response" != "c" ] && [ "$response" != "a" ]
do
	read -p "continue [c] or abort [a] ? " response
done
if [ "$response" = "c" ]
then
	for file in $add_list
	do
		svn add $file
	done
	for file in $delete_list
	do
		svn delete $file
	done
	svn commit --file svn.log $add_list $change_list $delete_list
else
	count=0
	for file in $add_list $change_list
	do
		count=`expr $count + 1`
		ext=`echo $file | sed -e "s/.*\././"`
		if \
		[ $file != "CheckIncludeFile"  ] && \
	   	[ $file != "CheckIncludeOmh"   ] && \
	   	[ $file != "SvnCommit"         ] && \
	   	[ $file != "SvnCommit.sed"     ] && \
	   	[ $ext  != ".vcproj"           ] && \
	   	[ $ext  != ".vim"              ]
		then
			# undo the automatic edits
			echo "mv junk.$count $file"
			mv junk.$count $file
		fi
	done
fi
