# Improve documentation and example for AD computed division operator
# (also reorder Arithmetic section).
#
# SvnCommit: the shell script that executed this commit.
# WhatsNew06.omh: users view of these changes.
# Arithmetic.h: change order of subsections and includes.
# MulEq.h: change -= to *= in one of the comments.
# DivEq.h: major changes to documentation.
# Example/DivEq.cpp: major changes to example.
# TestMore/DivEq.cpp: include old example in this file.
# -----------------------------------------------
sed -e "/^[^#]/d" -e "s/^[#] *//" < SvnCommit > svn.log
list="\
	SvnCommit
	omh/WhatsNew06.omh
	CppAD/local/Arithmetic.h
	CppAD/local/MulEq.h
	CppAD/local/DivEq.h
	Example/DivEq.cpp
	TestMore/DivEq.cpp
"
for file in $list
do
	count=`expr $count + 1`
	ext=`echo $file | sed -e "s/.*\././"`
	if [ $file != "SvnCommit"      ] && \
	   [ $file != "SvnCommit.sed"  ] && \
	   [ $ext != ".vcproj"         ] && \
	   [ $ext != ".vim"            ]
	then
		echo "cp $file junk.$count"
		cp $file junk.$count
		sed -f SvnCommit.sed < junk.$count > $file
		diff junk.$count $file
	fi
done
response=""
while [ "$response" != "c" ] && [ "$response" != "a" ]
do
	read -p "continue [c] or abort [a] ? " response
done
if [ "$response" = "c" ]
then
	svn commit --file svn.log $list
fi
