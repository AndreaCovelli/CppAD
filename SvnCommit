# Remove correctness tests from Build all (included by mistake) and
# change all test programs return an error code so can be checked for failure.
#
# SvnCommit: file that preformed this commit.
# Introduction.cpp: return error code.
# AD.h: reorder includes to fix IdentialEqual underined in ADTape (on Fedora).
# Build: echo Build option for each option and do remove test from Build all.
# */Example.cpp: return error code.
# Adolc.cpp: return error code.
# Bugs.omh: improve discussion of gcc 3.4.4 -O2 bug.
# WhatsNew06.omh: user's view of the changes.
# TestMore.cpp: return error code.
#
add_list="
"
change_list="
	SvnCommit
	Introduction/Introduction.cpp
	CppAD/local/AD.h
	Build
	Fadbad/Example.cpp
	Adolc/Example.cpp
	omh/Bugs.omh
	omh/WhatsNew06.omh
	Example/Example.cpp
	TestMore/TestMore.cpp
"
delete_list="
"
#----------------------------------------------------------------------
# Edit section above for individual cases, section below stays the same
# Do not use add_list to add directories; use the following instead:
#	svn add --non-recursive dir
#	svn commit directory -m "adding directory dir" dir
# where dir is replaced by the name of the directory. 
# Then use add_list to add the files within that directory.
#----------------------------------------------------------------------
sed -e "/^[^#]/d" -e "s/^[#] *//" < SvnCommit > svn.log
count=0
for file in $add_list $change_list
do
	count=`expr $count + 1`
	ext=`echo $file | sed -e "s/.*\././"`
	if \
	[ $file != "CheckIncludeFile"  ] && \
	[ $file != "CheckIncludeOmh"   ] && \
	[ $file != "SvnCommit"         ] && \
	[ $file != "SvnCommit.sed"     ] && \
	[ $ext  != ".vcproj"           ] && \
	[ $ext  != ".sln"              ] && \
	[ $ext  != ".vim"              ]
	then
		# automatic edits and backups
		echo "cp $file junk.$count"
		cp $file junk.$count
		sed -f SvnCommit.sed < junk.$count > $file
		diff junk.$count $file
	fi
done
for file in $add_list
do
	echo "svn add $file ?"
done
for file in $delete_list
do
	echo "svn delete $file ?"
done
response=""
while [ "$response" != "c" ] && [ "$response" != "a" ]
do
	read -p "continue [c] or abort [a] ? " response
done
if [ "$response" = "c" ]
then
	for file in $add_list
	do
		svn add $file
	done
	for file in $delete_list
	do
		svn delete $file
	done
	svn commit --file svn.log $add_list $change_list $delete_list
else
	count=0
	for file in $add_list $change_list
	do
		count=`expr $count + 1`
		ext=`echo $file | sed -e "s/.*\././"`
		if \
		[ $file != "CheckIncludeFile"  ] && \
	   	[ $file != "CheckIncludeOmh"   ] && \
	   	[ $file != "SvnCommit"         ] && \
	   	[ $file != "SvnCommit.sed"     ] && \
	   	[ $ext  != ".vcproj"           ] && \
		[ $ext  != ".sln"              ] && \
	   	[ $ext  != ".vim"              ]
		then
			# undo the automatic edits
			echo "mv junk.$count $file"
			mv junk.$count $file
		fi
	done
fi
