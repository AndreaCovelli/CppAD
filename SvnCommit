# Improve documentation and examples.
#
# SvnCommit: do not change SvnCommit, SvnCommit.sed, *.vcproj.
# Value.h: minor change in documentation.
# Integer.h: separate syntax from prototypes.   
# SvnCommit.sed: replace commands lost when this file edited itself.
# glossary.omh: make edits lost when SvnCommit.sed changed.
# Value.cpp: make edits lost when SvnCommit.sed changed.
# Default.cpp: make edits lost when SvnCommit.sed changed.
# Integer.cpp: major changes to make example easier to read.
# -----------------------------------------------
list="\
	SvnCommit \
	CppAD/local/Value.h \
	CppAD/local/Integer.h
	SvnCommit.sed \
	omh/glossary.omh \
	Example/Value.cpp \
	Example/Default.cpp \
	Example/Integer.cpp \
"
for file in $list
do
	ext=`echo $file | sed -e "s/.*\././"`
	if [ $file != "SvnCommit"      ] && \
	   [ $file != "SvnCommit.sed"  ] && \
	   [ $ext != ".vcproj"         ]
	then
		sed -f SvnCommit.sed < $file > junk
		echo $file
		diff $file junk
		mv $file ~/trash 
		mv junk $file
	fi
done
sed -e "/^[^#]/d" -e "s/^[#] *//" < SvnCommit > svn.log
svn commit --file svn.log $list
