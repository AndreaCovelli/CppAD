# Add batch editing to SvnCommit
# 
# SvnCommit: this file.
# SvnCommit.sed: edits to be made with each commit.
# WhatsNew06.omh: users view of the changes.
# WishList.omh: add software guidlines.
# CleanCppAD: remove htm directories.
# -----------------------------------------------
list="\
	omh/WhatsNew06.omh\
	omh/WishList.omh\
	CleanCppAD\
"
for file in $list
do
	sed -f SvnCommit.sed < $file > junk
	echo $file
	diff $file junk
	mv $file ~/trash 
	mv junk $file
done
sed -e "/^[^#]/d" -e "s/^[#] *//" < SvnCommit > svn.log
svn add SvnCommit.sed
svn commit --file svn.log \
	SvnCommit \
	SvnCommit.sed \
	$list
