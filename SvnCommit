# Improve documentation and example for AD computed subtraction operator.
#
# SvnCommit: the shell script that executed this commit.
# WhatsNew06.omh: users view of these changes.
# AddEq.h: minor changes to improve automatic conversion to other cases.
# SubEq.h: major changes to documentation.
# AddEq.cpp: minor changes to improve automatic conversion to other cases.
# Example/SubEq.cpp: major changes to example.
# TestMore/SubEq.cpp: include old example in this file.
# -----------------------------------------------
sed -e "/^[^#]/d" -e "s/^[#] *//" < SvnCommit > svn.log
list="\
	SvnCommit
	omh/WhatsNew06.omh
	CppAD/local/SubEq.h
	CppAD/local/AddEq.h
	Example/AddEq.cpp
	Example/SubEq.cpp
	TestMore/SubEq.cpp
"
for file in $list
do
	count=`expr $count + 1`
	ext=`echo $file | sed -e "s/.*\././"`
	if [ $file != "SvnCommit"      ] && \
	   [ $file != "SvnCommit.sed"  ] && \
	   [ $ext != ".vcproj"         ] && \
	   [ $ext != ".vim"            ]
	then
		echo "cp $file junk.$count"
		cp $file junk.$count
		sed -f SvnCommit.sed < junk.$count > $file
		diff junk.$count $file
	fi
done
response=""
while [ "$response" != "c" ] && [ "$response" != "a" ]
do
	read -p "continue [c] or abort [a] ? " response
done
if [ "$response" = "c" ]
then
	svn commit --file svn.log $list
fi
