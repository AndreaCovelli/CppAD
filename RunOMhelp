if [ "$1" != "Doc" ] && [ "$1" != "Developer" ]
then
	echo "RunOMhelp target: where target is Doc or Developer"
	exit
fi
if [ "$1" = Developer ]
then
	rm -r -f Developer
	#
	echo "Building developer documentation"
	mkdir Developer
	cd    Developer
	if ! omhelp ../Developer.omh -xml -debug > ../RunOMhelp.log
	then
		echo "OMhelp could not build developer documentation."
		exit 1
	fi
	omhelp ../Developer.omh -debug
	cd ..
fi
if [ "$1" = Doc ]
then
	#
	rm -r -f Doc
	echo "Building user documentation"
	#
	mkdir Doc
	cd    Doc
	if ! omhelp ../Doc.omh > ../RunOMhelp.log \
		-l http://www.coin-or.org/CppAD/ \
		-xml \
		-debug
	then
		echo "OMhelp could not build user documentation."
		exit 1
	fi
	omhelp ../Doc.omh  \
                -l http://www.coin-or.org/CppAD/ \
		-debug
	cd ..
fi
exit 0
